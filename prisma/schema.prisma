// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// prisma/schema.prisma
model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  role    String[]
  isActive   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  employee Employee?
  client Client?
}

model Employee {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  middle_name String?
  rank Rank
  user   User? @relation(fields: [userId], references: [id])
  userId Int?  @unique 
  phone String?
  birthday DateTime? @db.Date
  groups Group[]
}


enum userRole {
  USER
  ADMIN
  EMPLOYEE
  CLIENT
}

enum Rank {
  Trainer
  HeadTrainer
}

model Group {
  id Int @id @default(autoincrement())
  name String
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  client Client[]
  employes Employee[]
}

model Schedule {
  id Int @id @default(autoincrement())
  groups Group[]
  name String
}
model ScheduleDay {
  id Int @id @default(autoincrement())
  weekDay Int
  name String
  startTime String
  endTime String
}

model Client {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  middle_name String?
  user   User? @relation(fields: [userId], references: [id])
  userId Int?  @unique 
  phone String?
  birthday DateTime? @db.Date
  clientType clientType
  group   Group? @relation(fields: [groupId], references: [id])
  groupId Int? 
  visitLog VisitLog[]
}

enum clientType {
  Child
  Parent
}

model VisitLog {
  id Int @id @default(autoincrement())
  date DateTime? @db.Date
  client   Client @relation(fields: [clientId], references: [id])
  clientId Int
  is_visited Boolean
  is_reason Boolean
  description String?
}

model Files {
  id Int @id @default(autoincrement())
  originalname String
  mimetype String
  fileType String
  b64 String
  size Int
  objectId Int
}

enum fileType {
  avatar
  event
}